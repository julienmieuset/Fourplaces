<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FourplacesProject.CreateUser">
    
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Label Text="Prenom" 
               VerticalOptions="Center" 
               HorizontalOptions="Center"
               x:Name="Prenom" />
            <Label Text="Nom" 
               VerticalOptions="Center" 
               HorizontalOptions="Center"
               x:Name="Nom" />
            <Entry Text="" />
            <Label Text="Mail" 
               VerticalOptions="Center" 
               HorizontalOptions="Center"
               x:Name="Mail" />
            <Entry Text="" />
            <Label Text="MotDePasse" 
               VerticalOptions="Center" 
               HorizontalOptions="Center"
               x:Name="MotDePasse" />
            <Entry Text="" />
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Button Text="Créer"
               BackgroundColor="Gray"
               BorderRadius="10"
               BorderWidth="2"
               BorderColor="Black"
               HorizontalOptions="Center"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>