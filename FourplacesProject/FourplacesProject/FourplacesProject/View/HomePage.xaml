<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FourplacesProject.HomePage">
    <ContentPage.Content>
        <StackLayout>
            <ScrollView VerticalOptions="CenterAndExpand">
                <ListView  ItemsSource="{Binding ListPlace}"
                    SelectionMode="Single" 
                    SelectedItem="{Binding RowSelected, Mode=TwoWay}"
                    HasUnevenRows="true">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout BackgroundColor="#eee"
                                     Orientation="Horizontal">
                                    <StackLayout Margin="5,5,5,5"
                                        BackgroundColor="LightGray"
                                        HorizontalOptions="FillAndExpand"
                                        Orientation="Vertical">
                                        <Label Text="{Binding Title}"/>
                                        <Label Text="{Binding Description}"
                                               HorizontalOptions="StartAndExpand"/>
                                    </StackLayout>
                                    <Image Source="{Binding ImageId, StringFormat='https://td-api.julienmialon.com/images/{0:F0}'}" 
                                        VerticalOptions="Center" 
                                        HorizontalOptions="Center"
                                        WidthRequest="100"
                                        HeightRequest="100"/>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollView>
            <StackLayout Orientation="Vertical">
                <Button Text="Ajouter une place"
                        Command="{Binding goToAddPlacePage}"
                        BackgroundColor="LightGray"
                        Margin="5,5,5,5"
                        BorderRadius="10"
                        BorderWidth="2"
                        BorderColor="Black"
                        HorizontalOptions="Center"/>
                <Button Text="Modifier ses informations"
                        Command="{Binding goToModifPage}"
                        BackgroundColor="LightGray"
                        BorderRadius="10"
                        BorderWidth="2"
                        BorderColor="Black"
                        HorizontalOptions="Center"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>